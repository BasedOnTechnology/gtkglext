if test "x$gdktarget" = "xx11"; then

  # for X11

  have_GL=no
  GL_LIB_NAME=GL

  # GLcore and GL (SGI)
  AC_CHECK_LIB(GLcore, glNewList,
               GL_LIBS="-lGLcore")
  if test "x$ac_cv_lib_GLcore_glNewList" = "xyes" ; then
    # if GLcore found, then also check for GL
    AC_CHECK_LIB(GL, glXCreateContext,
                 [ GL_LIBS="-lGL $GL_LIBS"
                   have_GL=yes ])
  fi

  # GL
  if test "x$have_GL" = "xno" ; then
    # if no GLcore and GL, check for GL
    AC_CHECK_LIB(GL, glNewList,
                 [ GL_LIBS="-lGL"
                   have_GL=yes ])
    if test "x$ac_cv_lib_GL_glNewList" = "xno" ; then
      # GL may need to link with -lpthread explicitly
      AC_CHECK_LIB(GL, glGenLists,
                   [ GL_LIBS="-lGL -lpthread"
                     have_GL=yes ], ,
                   "-lpthread")
      if test "x$ac_cv_lib_GL_glGenLists" = "xno" ; then
        # GL may need to link with -lstdc++ explicitly
        AC_CHECK_LIB(GL, glCallList,
                     [ GL_LIBS="-lGL -lstdc++"
                       have_GL=yes ], ,
                     "-lstdc++")
        if test "x$ac_cv_lib_GL_glCallList" = "xno" ; then
          # GL may need to link with -lstdc++ and -lpthread explicitly
          AC_CHECK_LIB(GL, glEndList,
                       [ GL_LIBS="-lGL -lstdc++ -lpthread"
                         have_GL=yes ], ,
                       "-lstdc++ -lpthread")
        fi
      fi
    fi
  fi

  # MesaGL
  if test "x$have_GL" = "xno" ; then
    # if no GL, check for MesaGL
    AC_CHECK_LIB(MesaGL, glNewList,
                 [ GL_LIBS="-lMesaGL"
                   have_GL=yes
                   GL_LIB_NAME=MesaGL ])
  fi

  if test "x$have_GL" = "xno" ; then
    # no GL found
    AC_MSG_ERROR(Cannot find GL library)
  fi

  have_GLU=no

  AC_CHECK_LIB(GLU, gluNewQuadric,
               [ GL_LIBS="-lGLU $GL_LIBS"
                 have_GLU=yes], ,
               $GL_LIBS)
  if test "x$ac_cv_lib_GLU_gluNewQuadric" = "xno" ; then
    # if no GLU, check for MesaGLU
    AC_CHECK_LIB(MesaGLU, gluNewQuadric,
                 [ GL_LIBS="-lMesaGLU $GL_LIBS"
                   have_GLU=yes], ,
                 $GL_LIBS)
  fi

  if test "x$have_GLU" = "xno" ; then
    # no GLU found
    AC_MSG_ERROR(Cannot find GLU library)
  fi

  # check Mesa-specific GLX extensions
  have_MesaEXT=no
  AC_CHECK_LIB($GL_LIB_NAME, glXCreateGLXPixmapMESA,
               [ have_MesaEXT=yes ], ,
               $GL_LIBS)

  AC_MSG_CHECKING([whether to enable Mesa-specific GL/GLX extensions])
  if test "x$have_MesaEXT" = "xno"; then
    enable_mesa_ext=no
  fi
  if test "x$enable_mesa_ext" = "xyes"; then
    GL_EXTRA_CFLAGS="$GL_EXTRA_CFLAGS -DGTKGLEXT_ENABLE_MESA_EXT"    
  fi
  AC_MSG_RESULT([$enable_mesa_ext])

else

  # for Win32

  AC_MSG_CHECKING([for glNewList in -lopengl32])
  have_opengl32=no
  LIBS="-lopengl32 $LIBS"
  AC_TRY_LINK([ #include <windows.h>
                #include <GL/gl.h> ], 
              [ glNewList(1, GL_COMPILE); ], 
              [ GL_LIBS="-lopengl32"
                have_opengl32=yes ])
  AC_MSG_RESULT($have_opengl32)
  if test "x$have_opengl32" = "xno" ; then
    AC_MSG_ERROR(Cannot find GL library)
  fi

  AC_MSG_CHECKING([for gluNewQuadric in -lglu32])
  have_glu32=no
  LIBS="-lglu32 $LIBS"
  AC_TRY_LINK([ #include <windows.h>
                #include <GL/gl.h>
                #include <GL/glu.h> ], 
              [ gluNewQuadric(); ], 
              [ GL_LIBS="-lglu32 $GL_LIBS"
                have_glu32=yes ])
  AC_MSG_RESULT($have_glu32)
  if test "x$have_glu32" = "xno" ; then
    AC_MSG_ERROR(Cannot find GLU library)
  fi

